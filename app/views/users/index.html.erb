<div class="container">
  <div class="item">
    <ul class="list">

      <% if search_users_list_not_empty %>
        <% search_users_list(@users).each do |user| %>
          <li class="list-item">
            <%= link_to("#{user.first_name}", user_path(user), class:'list-desc')%>
            <%= form_with(model: @friendship, local: true) do |f| %>
            <%= f.hidden_field :friend_id, :value => user.id %>
            <%= f.button :submit, class:'list-action' do %>
                  <i data-feather="user-plus"></i>
                  <%= 'Add Friend' %>
                <% end %>
            <% end %>
          </li>
        <% end %>
      
        <% else %>
      
        <li>
          You don't have users to search
        </li>
      <% end %>
      
      </ul>
  </div>
</div>




