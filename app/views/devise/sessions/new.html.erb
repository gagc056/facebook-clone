<div class="bg-pa">
  <div class="form-container">
    <h2 class="title">
      WELCOME
    </h2>
    <p class="subtitle">
      Let's Log in!
    </p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email'%>
    </div>
  
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'password-text' %>
    </div>
  
    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-main txt-center' %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field field-remember">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <% end %>

  <div class="or">
    OR
  </div>
  
  <%= render "devise/shared/links" %>
  
  </div>
</div>
